<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem.MainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameName"
        android:text="test"
        style="@style/ListItem.MainText"
        />

    <LinearLayout
       style="@style/ListItem.ButtonsLayout" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addMatchButton"
            android:background="@drawable/ic_add_circle_outline"
            style="@style/ListItem.Icon"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listMatchesButton"
            android:background="@drawable/ic_list"
            style="@style/ListItem.Icon"/>

        <ImageButton
            style="@style/ListItem.DeleteButton"/>


    </LinearLayout>


</LinearLayout>
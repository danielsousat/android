<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:padding">@dimen/dialog_margin</item>
    </style>

    <style name="AppTheme.Dialog.Footer" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dialog_footer_margin</item>
    </style>

    <style name="AppTheme.Button" parent="">

    </style>

    <style name="Divider" parent="AppTheme">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/divider_size</item>
    </style>

    <style name="ListItem.MainLayout" parent="">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/listItemMainLayout</item>
    </style>

    <style name="ListItem.ButtonsLayout" parent="">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ListItem.MainText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorListItem</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="ListItem.Icon" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginLeft">@dimen/list_icon_margin</item>
    </style>

    <style name="ListItem.DeleteButton" parent="ListItem.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_delete</item>
        <item name="android:id">@id/deleteButton</item>
    </style>

</resources>
